	<bean id="billingPlatformMercuri"
		class="br.com.supportcomm.virtualgoodscore.billing.service.platform.mercuri.BillingPlatformMercuri">
	</bean>
	
	<bean id="mercuriConnection"
		class="br.com.supportcomm.virtualgoodscore.util.mercuri.mt.MercuriConnectionImpl">		
	</bean>
	
	<bean id="beanProperties" class="br.com.supportcomm.virtualgoods.properties.BeanProperties">
		<property name="virtualGoodsUrl" 					value="${virtual.goods.url}" />
		<property name="processTransactionInterval" 		value="${processTransactionInterval}" />
		<property name="processBillingInterval" 			value="${processBillingInterval}" />
		<property name="processTransactionResponseInterval" value="${processTransactionResponseInterval}" />
		<property name="processMTInterval" 					value="${processMTInterval}" />
		<property name="processFlowCheckInterval" 			value="${processFlowCheckInterval}" />
		<property name="executeJobsFromThisMachine" 		value="${executeJobsFromThisMachine}" />
	</bean>
	
	<bean id="email" class="br.com.supportcomm.virtualgoods.mail.Email">
		<property name="smtp" 			value="${mail.smtp.host}" />
		<property name="user" 			value="${mail.smtp.user}" />
		<property name="passwd" 		value="${mail.smtp.pass}" />
		<property name="remetente" 		value="${mail.smtp.remetente}" />
		<property name="desRemetente" 	value="${mail.smtp.remetente.descricao}" />
	</bean>
	
	<bean id="templateEmail" class="br.com.supportcomm.virtualgoods.mail.TemplateEmail">
		<property name="url" value="${virtual.goods.url}" />
	</bean>
